<!-- Views/Product/SearchResults.cshtml -->
@model List<Product>

<h2>Search Results</h2>

<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Size</th>
            <th>Price</th>
            <th>Mfg Date</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Size</td>
                <td>@product.Price</td>
                <td>@product.MfgDate</td>
                <td>@product.Category</td>
            </tr>
        }
    </tbody>
</table>
